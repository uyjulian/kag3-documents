<tag name="timeout">
	<shortinfo> Jump waiting for timeout </shortinfo>
	<group> Label jump operation </group>
	<attribs>
	
		<attrib name="time">
			<shortinfo> Timeout time </shortinfo>
			<required> yes </required>
